{
  "$schema": "node_modules/@biomejs/biome/configuration_schema.json",
  "vcs": {
    "enabled": false,
    "clientKind": "git",
    "useIgnoreFile": false
  },
  "files": {
    "ignoreUnknown": false,
    "includes": [
      "**",
      "!**/node_modules",
      "!**/dist",
      "!**/.next",
      "!**/.vercel",
      "!**/.open-next",
      "!**/.wrangler",
      "!**/cloudflare-env.d.ts"
    ]
  },
  "formatter": {
    "enabled": true,
    "indentWidth": 2,
    "indentStyle": "space",
    "useEditorconfig": true
  },
  "assist": {
    "actions": {
      "source": { "recommended": true }
    }
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "complexity": {
        "noForEach": "off"
      },
      "correctness": {
        "useExhaustiveDependencies": {
          "level": "warn"
        }
      },
      "suspicious": {
        "noArrayIndexKey": "off",
        "noShadowRestrictedNames": "off"
      },
      "nursery": {
        "useSortedClasses": {
          "fix": "safe",
          "level": "warn",
          "options": {
            "attributes": ["classList", "classNames"],
            "functions": ["clsx", "cva", "tw", "tw.*"]
          }
        }
      },
      "a11y": {
        "useValidAriaRole": {
          "level": "error",
          "options": {
            "allowInvalidRoles": ["invalid-role", "text"],
            "ignoreNonDom": true
          }
        },
        "useKeyWithClickEvents": "off"
      }
    }
  },
  "javascript": {
    "formatter": {
      "semicolons": "asNeeded",
      "quoteStyle": "single"
    }
  },
  "json": {
    "formatter": {
      "indentStyle": "space"
    }
  }
}
