{
  "name": "nextjs-on-cloudflare-workers",
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "dev": "next dev --turbopack -p 3006",
    "build": "next build",
    "start": "next start -p 3006",
    "lint": "biome lint --write",
    "format": "biome format --write",
    "check": "biome check --no-errors-on-unmatched",
    "preinstall": "only-allow pnpm",
    "prepare": "husky || true",
    "db:generate": "drizzle-kit generate",
    "db:migrate:dev": "wrangler d1 migrations apply DB --local",
    "db:migrate:prod": "wrangler d1 migrations apply DB --remote",
    "db:studio": "drizzle-kit studio --port 4984",
    "cf:preview": "cross-env APP_ENV=development opennextjs-cloudflare build && opennextjs-cloudflare preview",
    "cf:deploy": "opennextjs-cloudflare build && pnpm db:migrate:prod && opennextjs-cloudflare deploy -- --keep-vars",
    "cf:upload": "opennextjs-cloudflare build && opennextjs-cloudflare upload -- --keep-vars",
    "cf:typegen": "wrangler types --env-interface CloudflareEnv cloudflare-env.d.ts"
  },
  "dependencies": {
    "@heroui/react": "^2.8.3",
    "@hookform/resolvers": "^5.1.1",
    "@opennextjs/cloudflare": "^1.7.1",
    "@radix-ui/react-scroll-area": "^1.2.4",
    "@react-aria/ssr": "^3.9.8",
    "@react-aria/visually-hidden": "^3.8.22",
    "@t3-oss/env-nextjs": "^0.13.8",
    "@tailwindcss/postcss": "^4.1.11",
    "@tailwindcss/typography": "^0.5.16",
    "@tanstack/react-query": "^5.76.1",
    "@tanstack/react-query-devtools": "^5.74.4",
    "@trpc/client": "^11.1.3",
    "@trpc/react-query": "^11.1.3",
    "@trpc/server": "^11.1.3",
    "@trpc/tanstack-react-query": "^11.1.3",
    "better-auth": "^1.3.7",
    "better-auth-cloudflare": "^0.2.4",
    "client-only": "^0.0.1",
    "clsx": "^2.1.1",
    "dayjs": "^1.11.13",
    "dotenv": "^16.5.0",
    "drizzle-orm": "^0.43.1",
    "drizzle-zod": "^0.8.3",
    "es-toolkit": "^1.36.0",
    "jiti": "^2.4.2",
    "motion": "^12.7.4",
    "nanoid": "^5.1.5",
    "next": "^15.5.2",
    "next-themes": "^0.4.6",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "react-error-boundary": "^6.0.0",
    "react-hook-form": "^7.57.0",
    "react-virtuoso": "^4.12.8",
    "server-only": "^0.0.1",
    "superjson": "^2.2.2",
    "tailwindcss": "^4.1.11",
    "usehooks-ts": "^3.1.1",
    "zod": "^3.25.34"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.2",
    "@commitlint/cli": "^19.8.0",
    "@iconify-json/logos": "^1.2.9",
    "@iconify-json/lucide": "^1.2.58",
    "@iconify-json/solar": "^1.2.4",
    "@iconify-json/tabler": "^1.2.20",
    "@iconify/tailwind4": "^1.0.6",
    "@react-types/shared": "^3.29.0",
    "@total-typescript/ts-reset": "^0.6.1",
    "@types/node": "^22.14.1",
    "@types/react": "18.3.1",
    "@types/react-dom": "18.3.1",
    "commitlint-config-gitmoji": "^2.3.1",
    "cross-env": "^10.0.0",
    "dotenv-cli": "^10.0.0",
    "drizzle-kit": "^0.31.4",
    "git-cz": "^4.9.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.5.1",
    "only-allow": "^1.2.1",
    "postcss": "^8.5.3",
    "tsx": "^4.19.4",
    "typescript": "^5.7.2",
    "wrangler": "^4.34.0"
  },
  "engines": {
    "node": "22.x"
  }
}
