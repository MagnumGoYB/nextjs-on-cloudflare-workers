{
  "disableEmoji": false,
  "format": "{emoji}{type}{scope}: {subject}",
  "list": [
    "feat",
    "fix",
    "docs",
    "ci",
    "style",
    "refactor",
    "release",
    "perf",
    "test",
    "chore"
  ],
  "maxMessageLength": 64,
  "minMessageLength": 3,
  "questions": ["type", "scope", "subject", "body", "breaking", "issues"],
  "scopes": [
    "",
    "components",
    "hooks",
    "utils",
    "styles",
    "docs",
    "tests",
    "config",
    "deps",
    "build"
  ],
  "types": {
    "chore": {
      "description": "Other changes that don't modify src or test files",
      "emoji": "🚧",
      "value": "chore"
    },
    "ci": {
      "description": "Changes related to CI configuration",
      "emoji": "👷",
      "value": "ci"
    },
    "docs": {
      "description": "Documentation only changes",
      "emoji": "📝",
      "value": "docs"
    },
    "feat": {
      "description": "A new feature",
      "emoji": "✨",
      "value": "feat"
    },
    "fix": {
      "description": "A bug fix",
      "emoji": "🐛",
      "value": "fix"
    },
    "perf": {
      "description": "Performance improvements",
      "emoji": "⚡️",
      "value": "perf"
    },
    "refactor": {
      "description": "Code changes that neither fix a bug nor add a feature",
      "emoji": "♻️",
      "value": "refactor"
    },
    "release": {
      "description": "Release a new version",
      "emoji": "🔖",
      "value": "release"
    },
    "style": {
      "description": "Changes that do not affect the meaning of the code (white-space, formatting, etc.)",
      "emoji": "🎨",
      "value": "style"
    },
    "test": {
      "description": "Adding or updating tests",
      "emoji": "🧪",
      "value": "test"
    }
  }
}
